        <TextBox Name="emailBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" Margin="132,167,0,0"/>
        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Top" Width="372" Margin="0,207,10,0" Click="Button_Click"/>
    </Grid>
